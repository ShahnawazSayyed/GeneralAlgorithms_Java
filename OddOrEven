
/*Given a number, the task is to check if this number is Odd or Even using Scanner function.
 A number is called even if the number is 
 divisible by 2 and is called odd if it is not divisible by 2. */

//import Scanner function to get dynamic user input
import java.util.Scanner;

public class OddEven{

	//Define the main function
	public static void main(String[] args){
	
	Scanner scan = new Scanner(System.in);
	
	System.out.println("Enter the number - ");
	int num = scan.nextInt();
	scan.close();
	
	int result = checkOddEven(num);
	
	if(result == 0)
		System.out.println("Number is Even");
	else
		System.out.println("Number is Odd");
	}
	
	public static int checkOddEven(int num){
	
	return (num % 2);
	}
		
}
